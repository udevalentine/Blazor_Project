@page "/"
@inherits EmployeeListBase
<h3>Employee List</h3>
<div class=" card-deck">
    @if (Employees == null)
    {
        <div class="spinner"></div>
    }
    else
    {
    @foreach (var employee in Employees)
    {
        <div class="card">
            <div class="card-header">
               <h3>@employee.FirstName @employee.LastName</h3>
            </div>
            <img class="card-img-top thumbnail" src="@employee.Passport" style="min-width:18rem; max-width:30.5%"/>
            <div class="card-footer text-center">
                <a href=@($"/employeedetail/{employee.EmployeeId}") class="btn btn-secondary m-1">View</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>
            </div>
        </div>
    }
    }
</div>

